{
	"manifest_version": 3,
	"name": "NanoChat",
	"version": "0.1.1",
	"description": "NanoChat Chrome Extension",
	"permissions": [
		"storage",
		"unlimitedStorage",
		"activeTab",
		"tabs",
		"sidePanel",
		"webNavigation"
	],
	"host_permissions": [
		"<all_urls>"
	],
	"background": {
		"service_worker": "src/background/index.ts",
		"type": "module"
	},
	"side_panel": {
		"default_path": "src/sidepanel.html"
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"src/content/index.tsx"
			],
			"all_frames": true
		}
	],
	"icons": {
		"16": "icons/icon-16.png",
		"48": "icons/icon-48.png",
		"128": "icons/icon-128.png"
	},
	"commands": {
		"open-sidepanel": {
			"suggested_key": {
				"default": "Ctrl+Shift+Y",
				"mac": "Command+Shift+Y"
			},
			"description": "Open NanoChat"
		}
	}
}
